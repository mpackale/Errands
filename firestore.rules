rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }

    match /households/{h} {
      // Only members of the household can read
      allow read: if isSignedIn();

      match /members/{m} {
        allow read: if isSignedIn();
        allow write: if isSignedIn(); // tighten later
      }

      match /chores/{c} {
        allow read, write: if isSignedIn(); // tighten later (assignees/parents)
      }
    }

    match /profiles/{uid} {
      allow read, write: if isSignedIn() && request.auth.uid == uid;
    }
  }
}
