rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() { return request.auth != null; }
    function householdFromPath() { return request.resource.name.split('/')[3]; }
    match /proofs/{householdId}/{choreId}/{fileName} {
      allow read, write: if isSignedIn(); // refined by Firestore membership in callable before upload URL
    }
  }
}
